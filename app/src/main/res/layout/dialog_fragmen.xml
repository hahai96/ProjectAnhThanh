<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_choose_birth_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="Chọn Ngày Sinh"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.bruce.pickerview.LoopView
        android:id="@+id/lv_day"
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        app:canLoop="true"
        app:centerTextColor="#ff000000"
        app:drawItemCount="7"
        app:initPosition="3"
        app:layout_constraintEnd_toStartOf="@+id/lv_month"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_birth_day"
        app:lineColor="@color/colorPrimary"
        app:textSize="25sp"
        app:topBottomTextColor="#ffafafaf" />

    <com.bruce.pickerview.LoopView
        android:id="@+id/lv_month"
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        app:canLoop="false"
        app:centerTextColor="#ff000000"
        app:drawItemCount="7"
        app:initPosition="3"
        app:layout_constraintEnd_toStartOf="@+id/lv_year"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/lv_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_birth_day"
        app:lineColor="@color/colorPrimary"
        app:textSize="25sp"
        app:topBottomTextColor="#ffafafaf" />

    <com.bruce.pickerview.LoopView
        android:id="@+id/lv_year"
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        app:canLoop="true"
        app:centerTextColor="#ff000000"
        app:drawItemCount="7"
        app:initPosition="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/lv_month"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_birth_day"
        app:lineColor="@color/colorPrimary"
        app:textSize="25sp"
        app:topBottomTextColor="#ffafafaf" />

    <Button
        android:id="@+id/bt_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/white"
        android:text="Lưu"
        android:textAllCaps="false"
        android:textColor="@color/button_save_dialog"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lv_day"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>